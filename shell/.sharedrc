#
# ~/.sharedrc
#

# If not running interactively, don't do anything

# Environment Variables
if [ -d ~/.config/shell/shared/alias.d ]; then
   for file in ~/.config/shell/shared/env.d/* ; do
      if [ -f "$file" ]; then
	 #echo "Sourcing ${file}"
         source "$file"
      fi
   done
fi

# Path
[[ -f ~/.config/shell/shared/path ]] && source ~/.config/shell/shared/path

# Functions
if [ -d ~/.config/shell/shared/function.d ]; then
   for file in ~/.config/shell/shared/function.d/* ; do
       if [ -f "$file" ]; then
	 # echo "Sourcing ${file}"
	   source "$file"
       fi
   done
fi

#Aliases
if [ -d ~/.config/shell/shared/alias.d ]; then
   for file in ~/.config/shell/shared/alias.d/* ; do
      if [ -f "$file" ]; then
	  #echo "Sourcing ${file}"
	   source "$file"
      fi
   done
fi
